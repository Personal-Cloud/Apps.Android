<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xamarin="http://schemas.xamarin.com/android/xamarin/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_material">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/join_cloud_device_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/device_name"
        app:errorEnabled="true"
        xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/device_name_hint" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/join_cloud_invite"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:hint="@string/invite_code"
        app:errorEnabled="true"
        xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/invite_hint" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/join_cloud_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_material"
        android:text="@string/new_cloud_join"
        xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

</LinearLayout>